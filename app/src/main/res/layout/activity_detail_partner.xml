<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/imageDetailPartner"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:contentDescription="Café da Diva"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cafediva" />

    <TextView
        android:paddingTop="14dp"
        android:paddingLeft="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:id="@+id/tvTituloDetailPartner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Império das Tintas"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:paddingTop="12dp"

        >

        <TextView
            android:textColor="@color/black"
            android:id="@+id/partnerDetailStreet"
            android:text="Av. Barão do Rio Branco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/partnerDetailNumber"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", nº543"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/partnerDetailPhone"
        android:paddingTop="6dp"
        android:paddingLeft="16dp"
        android:text="(51)99620-1841"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="16dp"
            android:text="Torres"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="14dp"
            android:paddingTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/partnerCity"
            />

        <TextView
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "/>

        <TextView
            android:id="@+id/partnerState"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RS"/>

    </LinearLayout>

    <TextView
        android:paddingBottom="8dp"
        android:paddingTop="27dp"
        android:paddingLeft="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localização:"/>

        <android.support.v7.widget.CardView
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <fragment
                android:id="@+id/fragment_map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="224dp" />
        </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>